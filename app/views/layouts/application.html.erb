<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />
  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
  	<title><%= content_for?(:title) ? QA::Application.config.main_title + " - " + content_for(:title) : QA::Application.config.main_title %></title>
  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- Nav Bar -->
    <div class="row">
      <div class="large-12 columns">
        <div class="nav-bar right">
         <ul class="button-group">
            <%= render "layouts/links", className: "button" %>
          </ul>
        </div>
        <h1><%= link_to QA::Application.config.main_title, "/" %> <small><% if user_signed_in? %>Ol√°, <%= current_user.first_name %>!<% end %></small></h1>
        <hr />
        <div class="top-bar">
          <ul class="title-area">
            <li class="name">
              <h1><%= link_to "Categorias", "/" %></h1>
            </li>
            <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
          </ul>
          <section class="top-bar-section">
            <ul class="left">
              <li class="divider hide-for-small"></li>
              <%= render 'layouts/catmenu' %>
            </ul>
            <ul class="right">
              <li class="has-form">
                <form>
                  <div class="row collapse">
                    <div class="small-8 columns">
                      <input type="text">
                    </div>
                    <div class="small-4 columns">
                      <a href="#" class="button">Pesquisar</a>
                    </div>
                  </div>
                </form>
              </li>              
            </ul>
          </section>
        </div>
      </div>
    </div>
   
    <!-- End Nav -->
    <!-- Main Page Content and Sidebar -->
   
    <div class="row">
   
      <!-- Main Blog Content -->
      <div class="large-9 columns" role="content">
        <% if !flash.empty? %>
          <div class="panel callout">
          <% flash.each do |name, msg| %>
            <%= content_tag :h5, msg, id: "flash_#{name}" %>
          <% end %>
          </div>
        <% end %>
        <%= yield %>
      </div>
   
      <!-- End Main Content -->
   
      <%= render 'layouts/usersidebar' %>
      
    </div>
   
    <!-- End Main Content and Sidebar -->
    
    <!-- Footer -->
   
    <footer class="row">
      <div class="large-12 columns">
        <hr />
        <div class="row">
          <div class="large-6 columns">
            <p>&copy; GMPT Sistemas Ltda.</p>
          </div>
          <div class="large-6 columns">
            <ul class="inline-list right">
              <%= render "layouts/links", className: "" %>
            </ul>
          </div>
        </div>
      </div>
    </footer>
    <%= javascript_include_tag "application" %>
  </body>
</html>
