<%- title "Admin - Categorias" %>
<%
  @pucrs = Category.where("name = '#{QA::Application.config.main_category}'").first
  if @pucrs == nil
    @pucrs = Category.create!(name: "#{QA::Application.config.main_category}", description: "Pontifícia Universidade Católica do Rio Grande do Sul")
  end
%>
<h1>Categorias</h1>

<table>
  <thead>
    <tr>
      <th width="20%">Nome</th>
      <th width="50%">Descrição</th>
      <th width="5%"></th>
      <th width="5%"></th>
      <th width="5%"></th>
      <th width="5%"></th>
    </tr>
  </thead>

  <tbody>
    <%= render 'cat', category: @pucrs %>
  </tbody>
</table>

<br />

<%= link_to 'Nova Categoria', new_admin_category_path, class: "small button" %>
