<%
  @filho = Category.new
%>
<%- title "Admin - Adicionar Filho: #{@category.name}" %>
<div class="large-12 columns" role="content">
  <h3>Adicionar Filho: <%= @category.name %></h3>
  <%= form_for([:admin, @filho], url: admin_categories_path, html: { class: "custom" }) do |f| %>
    <div class="row">
      <div class="large-6 columns" role="content">
        <%= f.label :name, "Categoria" %><br>
        <%= f.text_field :name, autocomplete: true, autofocus: true %>
        <%= f.hidden_field :parent_id, value: @category.id %>
      </div>
    </div>

    <div class="row">  
      <div class="large-12 columns">
        <%= f.label :description, "Descrição" %><br>
        <%= f.text_area :description, autocomplete: true %>
      </div>
    </div>
    
    <div class="row">
      <div class="large-12 columns">
        <%= f.submit "Vai!", class: "small button" %>
      </div>
    </div>
  <% end %>

</div>