<%- title "Admin - Categoria: #{@category.name}" %>
<ul class="breadcrumbs">
<% @category.ancestors.each do |category| %>
  <li><%= link_to category.name, admin_category_path(category) %></li>
<% end %>
  <li class="current"><%= @category.name %></li>
</ul>

<h3><%= @category.name %>
  <%= link_to content_tag('i', '', class: 'fi-page-edit'), edit_admin_category_path(@category), class: 'icon', title: 'Editar Categoria' %>
  <%= link_to content_tag('i', '', class: 'fi-plus'), addchild_admin_category_path(@category), class: 'icon', title: 'Adicionar Subcategoria' %>
  <%= link_to content_tag('i', '', class: 'fi-trash'), admin_category_path(@category), method: :delete, class: 'icon', title: 'Apagar Categoria' %>
</h3>
<p><%= @category.description %></p>

<table>
  <thead>
    <tr>
      <th width="20%">Nome</th>
      <th width="50%">Descrição</th>
      <th width="5%"></th>
      <th width="5%"></th>
      <th width="5%"></th>
      <th width="5%"></th>
    </tr>
  </thead>
  <tbody>
    <% @category.children.each do |category| %>
      <%= render 'cat', category: category %>
    <% end %>    
  </tbody>
</table>